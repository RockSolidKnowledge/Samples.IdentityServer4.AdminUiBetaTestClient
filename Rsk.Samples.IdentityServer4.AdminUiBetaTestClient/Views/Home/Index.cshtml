@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @if (User.Identity.IsAuthenticated)
            {
                <h2>User Claims</h2>
                <ul>
                    @foreach (var claim in User.Claims)
                    {
                        <li><strong>@claim.Type</strong>: @claim.Value</li>
                    }
                </ul>
            }
            else
            {
                <h2>Unauthenticated!</h2>
            }
        </div>
    </div>
</div>